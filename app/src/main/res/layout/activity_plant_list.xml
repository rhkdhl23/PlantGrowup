<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="#ffffff">

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/delete"
        android:backgroundTint="#5d5d5d"
        android:id="@+id/button_list_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="식물 카테고리"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/call"
            android:layout_marginTop="0dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="찾고계신 식물의 종류를 선택하시면 \n\n 해당 식물에 대한 정보를 알려드립니다. : )"
            android:textAlignment="center"
            android:fontFamily="@font/call"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/button_solidpink"
        android:orientation="vertical">

        <Button
            android:background="#00ff0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 실내장식용 식물을 찾으시나요?"
            android:fontFamily="@font/call"
            android:id="@+id/button_inside"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/button_eat"
            android:background="#00ff0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 식용 식물을 찾으시나요?"
            android:fontFamily="@font/call"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/button_sunnot"
            android:background="#00ff0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. 햇빛이 잘 들어오지 않나요?"
            android:fontFamily="@font/call"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/button_pet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:text="4. 반려동물을 키우시나요?"
            android:fontFamily="@font/call"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/main_plant"/>
</LinearLayout>
