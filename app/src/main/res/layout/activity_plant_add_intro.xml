<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="안녕하세요."
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/call"
            android:layout_marginTop="50dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:textSize="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/call"
                android:text="저희 "
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
            <TextView
                android:textSize="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/call"
                android:text="무럭무럭"
                android:textStyle="bold"
                android:textColor="#165a1e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <TextView
                android:textSize="20dp"
                android:fontFamily="@font/call"
                android:text=" 에 오신것을 환영합니다 !"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="처음 앱을 사용하시기 위해 기르실 식물을 선택해주세요!"
            android:textAlignment="center"
            android:fontFamily="@font/call"
            android:textSize="15dp"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=" 처음 등록된 식물은 메인 화면의 마이페이지에서 "
            android:textAlignment="center"
            android:fontFamily="@font/call"
            android:textSize="15dp"
            android:gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="확인하고 관리할 수 있답니다!"
        android:textAlignment="center"
        android:fontFamily="@font/call"
        android:textSize="15dp"
        android:gravity="center_horizontal" />
</LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="40dp"
            android:id="@+id/second_animation"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="50dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="love_plant.json"
            app:lottie_loop="true"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_pink_1"
            android:layout_marginLeft="100dp"
            android:text="선택하러가기"
            android:fontFamily="@font/call"
            android:textColor="#ffffff"
            />


</LinearLayout>
</LinearLayout>